<%-include('partials/header') %>
<%-include('partials/navbar') %>


<div class="container">
    <div class="row mt-4">
        <div class="col">
            <h1 class="display-1 text-center text-warning pb-3">Nueva Publicación</h1>
        </div>
    </div>
    <div class="row col-md-5 mx-auto w-100">
    
        <form action="" id="new-post">
        
            <div class="mb-3">
                <input type="text" class="form-control" id="title" placeholder="Titulo" required>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a comment here" id="detail"
                    style="height: 300px" required></textarea>
                <label for="detail">Contenido de la publicación</label>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="url_image" placeholder="url imagen">
            </div>
            <div class="mb-3">
                <input type="date" class="form-control" name="" id="date">
            </div>
        
            <button type="submit" class="btn btn-primary btn-sm">
                Guardar
            </button>
        
        </form>
    
    
    </div>
</div>


<script src="/js/admin.js"></script>

<%-include('partials/footer')  %>